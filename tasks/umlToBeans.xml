<?xml version="1.0" encoding="UTF-8"?>
<project default="umlToBeans" name="org.eclipse.acceleo.module.uml_java_generation">
    <property name="ECLIPSE_HOME" value="../../../../../../../Admin/Program Files/eclipse/modeling-2025-06/eclipse"/>
    <property name="ECLIPSE_WORKSPACE" value="../.."/>

    <!-- The classpath with only the dependencies used by the project -->
    <path id="org.eclipse.acceleo.module.uml_java_generation.libraryclasspath">
        <pathelement location="${ECLIPSE_WORKSPACE}/org.eclipse.acceleo.module.uml_java_generation/bin"/>
    </path>

    <path id="org.eclipse.acceleo.module.uml_java_generation.classpath">
        <path refid="org.eclipse.acceleo.module.uml_java_generation.libraryclasspath"/>
    </path>

    <!-- The classpath with only the jars available in the plugin folder of Eclipse -->
    <path id="org.eclipse.acceleo.module.uml_java_generation.libraryclasspath.alljars">
        <pathelement location="../org.eclipse.acceleo.module.uml_java_generation/bin"/>
        <fileset dir="${ECLIPSE_HOME}/plugins/" includes="*.jar"/>
    </path>

    <path id="org.eclipse.acceleo.module.uml_java_generation.classpath.alljars">
        <path refid="org.eclipse.acceleo.module.uml_java_generation.libraryclasspath.alljars"/>
    </path>

    <!-- The default task with the jars used by this project -->
    <target name="umlToBeans">
        <java classname="org.eclipse.acceleo.module.uml_java_generation.main.UmlToBeans" classpathref="org.eclipse.acceleo.module.uml_java_generation.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>

    <!--
        In case of problem you can also try with all the jar available in your Eclipse
        Keep in mind that having two versions of the same jar can create problems
    -->
    <target name="umlToBeans.alljars">
        <java classname="org.eclipse.acceleo.module.uml_java_generation.main.UmlToBeans" classpathref="org.eclipse.acceleo.module.uml_java_generation.classpath">
            <arg value="${model}"/>
            <arg value="${target}"/>
        </java>
    </target>
</project>
